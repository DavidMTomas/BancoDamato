<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/ivmovimientos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="18dp"
        android:src="@drawable/ic_movimientosgastos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
      />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/ivmovimientos"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="cuenta bancari del banco"
        />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/ivmovimientos"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcion"
        tools:text="02.01.2001" />

    <TextView
        android:id="@+id/tvtexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/ivmovimientos"
        app:layout_constraintTop_toBottomOf="@+id/tvFecha"
        android:text="  Importe:" />

    <TextView
        android:id="@+id/tvImporte"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/tvtexto"
        app:layout_constraintTop_toBottomOf="@+id/tvFecha"
        android:text="Importe:" />

</androidx.constraintlayout.widget.ConstraintLayout>